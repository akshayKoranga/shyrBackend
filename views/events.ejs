<% layout('includes/layout') -%>

<div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-lg-10">
                    <h2>Admin</h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="/admin/dashboard">Home</a>
                        </li>
                        <li class="active">
                       <strong>Events</strong>
                        </li>
                    </ol>
                </div>
            </div>


<div class="wrapper wrapper-content  animated fadeInRight">
<div class="row">

  <div class="add col-sm-12">
    <a href="add_events"><button class="btn btn-success" type="button" >
      <i class="fa fa-plus" aria-hidden="true"></i> Add Events</button></a>
  </div>

                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5 style="color:#504DCE;">Events </h5>

                        </div>
                        <div class="ibox-content">
                            <div class="row">
                              <form action="#" method="get" role="search">
                                <input type="hidden" name="id">
                              </form>
                            </div>

                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                    <tr>
                                       <th>Event Name</th>
                                       <th>Cash Prize</th>
                                       <th>Start Time</th>
                                       <th>End Time</th>
                                    </tr>
                                    </thead>

                                    <tbody>
                              <% for(var i=0 ;i < events.length ;i++){ %>
                                    <tr>
                                      <td> <%= events[i].event_name %> </td>
                                      <td> <%= events[i].cash_prize %> </td>
                                      <td> <%= moment(events[i].event_start_time).format('DD MMMM YYYY HH:mm a') %> </td>
                                      <td> <%= moment(events[i].event_end_time).format('DD MMMM YYYY HH:mm a') %> </td>

                                      <td> <a href="/admin/edit_events/<%=events[i].id%>"><button class="btn btn-edit btn-success" type="button" >
                                           Edit</button></a></td>
                                      <td> <a href="deleteEvent" data-id="<%=events[i].id%>" class="open-deleteEventDialog" data-toggle="modal">
                                          <i class="fa fa-trash fa-lg" aria-hidden="true"></i> </a></td>
                                    </tr>
                              <% } %>
                                    </tbody>
                                      <tfoot>
                                <tr>
                                    <td colspan="12">
                                    </td>
                                </tr>
                                </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
   </div>

   <!-- Modal -->
   <div class="modal fade" id="deleteEvent" role="dialog">
     <div class="modal-dialog">

       <!-- Modal content-->
       <form method="get" action="/admin/delete_events">
       <div class="modal-content">
         <div class="modal-header">
           <button type="button" class="close" data-dismiss="modal">&times;</button>
           <h4 class="modal-title">Delete Event</h4>
         </div>
         <div class="modal-body">
           <p>Are you sure you want to delete this event?</p>
         </div>
         <div class="modal-footer">
            <input type="hidden" name="event_id" id="event_id" value=""/>
           <button type="submit" class="btn btn-default">Submit</button>
         </div>
       </div>
     </form>
     </div>
   </div>
